<script type='text/javascript'>

function makeDatePickers () {
  $('#trip_pickup_time, #trip_appointment_time').datetimepicker({
        ampm: true,
        buttonImage: "<%=  image_path 'calendar-clock.png' %>",
        buttonImageOnly: true,
        constrainInput: false,
        dateFormat: 'D yy-mm-dd',
        hourGrid: 2,
        hourMax: RidePilot.business_hours.end,
        hourMin: RidePilot.business_hours.start,
        minuteGrid: 15,
        showOn: "button",
        showTimezone: false,
        stepHour: 1,
        stepMinute: 15,
        timeFormat: 'hh:mm tt Z',
        timezone: RidePilot.timezone.name,
  });
}

$(function(){
  makeDatePickers();
})

</script>
