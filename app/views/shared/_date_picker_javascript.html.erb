<script type='text/javascript'>

function makeDatePickers () {
  $('#trip_pickup_time, #trip_appointment_time, [data-behavior=date-time-picker]').datetimepicker({
  	ampm: true,
        stepMinute: 15,
        stepHour: 1,
        hourMin: 8,
        hourMax: 18,
        hourGrid: 2,
        minuteGrid: 10,
        timeFormat: 'hh:mm t',
        dateFormat: 'D yy-mm-dd',
        showOn: "button",
        buttonImage: "<%=  image_path 'calendar-clock.png' %>",
        buttonImageOnly: true,
        constrainInput: false
  });
}

$(function(){
  makeDatePickers();
})

</script>
