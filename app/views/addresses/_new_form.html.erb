 <%= form_for address, url: addresses_path, as: prefix, :method=>:post, html: {:class=>'address-search', :remote=>true, 'data-id-element' => "#trip_#{prefix}_address_id", 'data-label-element' => "##{prefix}_search_address"} do |form| %> 
  <%= hidden_field_tag 'address_id', address.id %>
  <%= hidden_field_tag 'customer_id', address.customer_id %>
  <%= hidden_field_tag 'prefix', prefix %>
  <%= hidden_field_tag 'lat' %>
  <%= hidden_field_tag 'lon' %>
  <fieldset>
  <ol class="section">
    <%= render 'addresses/form', form: form %>
  </ol>
  </fieldset>
<% end %>