- if @addresses.present?
  - for address in @addresses
    %tr
      %td.name
        = link_to_if can?(:edit, ProviderCommonAddress), address.name || '' , edit_provider_common_address_path(address)
      %td= address.address
      %td= address.city
      %td= address.state
      %td= number_to_phone(address.phone_number, area_code: true)
      %td= address.in_district? ? "In District" : "Out of District"
      %td= address.notes
      - if can? :edit, Address
        %td= link_to translate_helper("edit"), edit_provider_common_address_path(address), :class=>'edit edit-address'
- else
  %tr
    %td
      No results for ‘#{@term}’
