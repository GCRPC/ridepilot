<%= form_for @driver do |f| %>
<%= f.label :first_name %><br/>
<%= f.text_field :first_name %><br/>
<br/>
<%= f.label :last_name %><br/>
<%= f.text_field :last_name %><br/>
<br/>
<%= f.label :active %><br/>
<%= f.select :active, [["Active", "true"], ["Inactive", "false"]], {:selected => @driver.active.to_s} %><br/>

<br/>
<%= f.label :paid %><br/>
<%= f.select :paid, [["Paid", "true"], ["Volunteer", "false"]], {:selected => @driver.paid.to_s} %><br/>
<br/>


<%= f.submit %>
<% end %> 
