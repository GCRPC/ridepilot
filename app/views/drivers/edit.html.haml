= render 'shared/highlight_active_tab_js', is_primary_nav: true, tab_class: 'drivers'
#page-header.row
  %h1.page-title= translate_helper("edit_driver_heading")
  .action-buttons
    - if can? :manage, @driver
      .pull-right
        %button#driver_form_submit.btn.action-button
          = translate_helper("save")
        = link_to translate_helper("cancel"), @driver, class: "btn action-button btn-danger"
= render partial: "form"

= render partial: "shared/focused_form_panel_javascript"
= render partial: "shared/custom_file_input_javascript"

:javascript
  $(document).ready(function(){
    $("form.edit_driver .form-actions").hide();
    
    $("#driver_form_submit").on("click", function(){
      $("form.edit_driver").submit();
    });

  });
