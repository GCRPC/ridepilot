<fieldset class="driver-compliance-fields fields">
  <%= f.hidden_field :id %>
  
  <p>
    <%= f.label :event, translate_helper("driver_compliance_form_event") %>
    <%= f.text_field :event %>
  </p>

  <p>
    <%= f.label :notes, translate_helper("driver_compliance_form_notes") %>
    <%= f.text_area :notes %>
  </p>

  <p>
    <%= f.label :due_date, translate_helper("driver_compliance_form_due_date") %>
    <%= f.text_field :due_date, data: {behavior: 'date-picker'} %>
  </p>
  
  <p>
    <%= f.label :compliance_date, translate_helper("driver_compliance_form_compliance_date") %>
    <%= f.text_field :compliance_date, data: {behavior: 'date-picker'} %>
  </p>
  
  <p><%= f.link_to_remove translate_helper("driver_compliances_remove_link_title") %></p>
</fieldset>