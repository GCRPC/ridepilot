<% remote ||= false %>
<%= nested_form_for [@driver, @driver_compliance], remote: remote do |f| %>
  <% if @driver_compliance.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading"><%= translate_helper("driver_compliance_form_error", count: @driver_compliance.errors.count) %></div>
      <div class="panel-body">
        <ul>
          <% @driver_compliance.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-primary">
        <div class="panel-body form-horizontal">
          <div class="form-group">
            <%= f.label :event, translate_helper("driver_compliance_form_event"), class: "col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_field :event, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :notes, translate_helper("driver_compliance_form_notes"), class: "col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_area :notes, class: "form-control", rows: 3 %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :due_date, translate_helper("driver_compliance_form_due_date"), class: "col-md-3 control-label" %>
            <div class="col-md-9">
              <div class="input-group datepicker-icon">
                <%= f.text_field :due_date, class: "form-control datepicker" %>
                <div class="input-group-btn">
                  <button class="btn btn-default" type="button">
                    <%= image_tag "calendar-clock.png" %>
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :compliance_date, translate_helper("driver_compliance_form_compliance_date"), class: "col-md-3 control-label" %>
            <div class="col-md-9">
              <div class="input-group datepicker-icon">
                <%= f.text_field :compliance_date, class: "form-control datepicker" %>
                <div class="input-group-btn">
                  <button class="btn btn-default" type="button">
                    <%= image_tag "calendar-clock.png" %>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div><!-- END .panel-body -->
      </div><!-- END .panel -->
      
      <div class="panel panel-primary">
        <div class="panel-heading"><%= label_tag translate_helper("document_associations_documents_heading") %></div>
        <table class="table table-striped" id="document-associations">
          <thead>
            <tr>
              <th width="96%"><%= translate_helper("document_associations_form_document_label") %></th>
              <th width="4%"></th>
            </tr>
          </thead>
          <tbody>
            <%= f.fields_for :document_associations, :wrapper => false do |f| %>
              <%= render partial: "document_associations/document_association_fields_for_associable", locals: {f: f, documents: @driver_compliance.driver.documents} %>
            <% end %>
          </tbody>
        </table>
        <div class="panel-footer">
          <div class="clearfix">
            <%= f.link_to_add translate_helper("document_associations_form_add_link_title"), :document_associations, data: { target: "#document-associations" }, class: "btn action-button pull-right" %>
          </div>
        </div>
      </div><!-- END .panel -->
    </div><!-- END .col-md-12 -->
  </div><!-- END .row -->
  
  <div class="row form-actions"><%= f.submit translate_helper("driver_compliance_form_submit"), class: "btn action-button" %></div>
<% end %>
