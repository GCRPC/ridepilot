#doubleBookedTripDialog.modal.fade.col-sm-12{ role: "dialog",
    "aria-hidden" => 'true',
    tabindex: "-1",
    data: {"backdrop": "true", "keyboard": "true" }}
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title{:style => "text-align:left;"}
          %strong
            = translate_helper(:site_title)
      .modal-body.row{:style => "text-align:left; margin: 0px;"}
        .col-sm-12{style: 'padding: 5px;'}
          %label.result-reason-label=translate_helper(:ask_about_trip_double_booked_message)
          %table#double-booked-trips-table
            %tr.header-row
              %th="ID"
              %th=translate_helper(:date)
              %th=translate_helper(:pickup_time)
              %th=translate_helper(:appointment_time)
      .modal-footer
        .pull-right
          .submit-double-book-modal.btn.btn-primary{ data: {dismiss: 'modal'} }
            =translate_helper(:double_booked_modal_submit)
          .dismiss-double-book-modal.btn.btn-danger{ data: {dismiss: 'modal'} }
            =translate_helper(:double_booked_modal_dismiss)
