<tr class="trip">
  <td><%= link_to trip.customer.name, trip.customer %></td>
  <td><%= format_time_for_listing trip.pickup_time %></td>
  <td><%= display_trip_result(trip.trip_result) %></td>
  <td><% if can? :edit, trip %><%= link_to 'Edit Trip', edit_trip_path(trip), "data-remote"=>true, :class=>'edit' %><% end %></td>
  <td><%= link_to 'Delete Trip', trip, :confirm => 'Are you sure?', :method => :delete, :class=>'delete' %></td>
</tr>
