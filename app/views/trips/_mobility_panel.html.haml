:ruby
  @ridership_mobility_mappings = @trip.ridership_mobilities.group_by{|c|[c.mobility_id, c.ridership_id]}

- edit_mode = :edit if !defined? edit_mode
.panel.panel-primary#trip_mobility_panel
  .panel-heading
    %h3.panel-title
      = translate_helper(:trip_mobility_panel)
  .panel-body{style: 'padding: 5px;'}
    - if edit_mode == :show
      = render 'trips/ridership_mobility_listing'
    - else
      = render 'trips/ridership_mobility_edit'
