.panel.panel-primary#trip_eligibility_panel
  .panel-heading
    %h3.panel-title
      = translate_helper(:trip_eligibility_panel)
  .panel-body
    .form-group
      .form-label
        %label
          = translate_helper("medicaid_eligible")  
      .form-field
        = f.check_box :medicaid_eligible
    .customer-eligibilities{style: (@customer ? "" : "display: none;")}
      %h4= translate_helper('customer_eligibilities')
      .customer-eligibility-details.form-group
        = render 'customers/view_customer_eligibilities'
