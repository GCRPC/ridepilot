<div id="expand_calendar" style="display:none;">
  <button class="ui-button ui-widget ui-state-default ui-button-text-icon-primary ui-button-icon-only ui-corner-left ui-corner-right" title="Large Calendar">
    <span class="ui-button-icon-primary ui-icon ui-icon-arrowthickstop-1-s"></span>
    <span class="ui-button-text">Large Calendar</span>
  </button>
</div>

<table class="trips" <% if display %>style="display:<%= display %>;" <% end %>>
  <tr>
    <th></th>
    <th><%= translate_helper("pickup_date") %></th>
    <th><%= translate_helper("customer") %></th>
    <th><%= translate_helper("pickup_address") %></th>
    <th><%= translate_helper("pickup_time") %></th>
    <th><%= translate_helper("dropoff_address") %></th>
    <th><%= translate_helper("appointment_time") %></th>
    <th><%= translate_helper("status") %></th>
    <th><%= translate_helper("trip_called_back") %></th>
    <th><%= translate_helper("result") %></th>
  </tr>

  <% @trips.each do |trip| %>
    <%= render "trip_row", :trip => trip %>
  <% end %>
</table>
