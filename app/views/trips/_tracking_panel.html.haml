.panel.panel-primary#trip_customer_panel
  .panel-heading
    %h3.panel-title
      = translate_helper(:number_of_passengers_tracking)
  .panel-body    
    .form-group
      .form-label
        = f.label :number_of_senior_passengers_served, translate_helper("number_of_senior_passengers_tracking_label")
      .form-field
        = f.number_field :number_of_senior_passengers_served, min: 0, class: "form-control"
    .form-group
      .form-label
        = f.label :number_of_disabled_passengers_served, translate_helper("number_of_disabled_passengers_tracking_label")
      .form-field
        = f.number_field :number_of_disabled_passengers_served, min: 0, class: "form-control"
    .form-group
      .form-label
        = f.label :number_of_low_income_passengers_served, translate_helper("number_of_low_income_passengers_tracking_label")
      .form-field
        = f.number_field :number_of_low_income_passengers_served, min: 0, class: "form-control"
      
