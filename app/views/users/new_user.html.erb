<div id="page-header">
  <h1>Create New User</h1>
</div>

<%= form_for @user, :url=>url_for(:action=>:create_user) do |f| %>

  <fieldset>

    <ol class="section first">
      <li>
        <%= f.label :email, "Email:" %>
        <%= f.text_field :email %>
      </li>

      <li>
        <%= f.label :permissions, "Permissions:" %>
        <%= select :role, :level, [["Admin", 100], ["Editor", 50], ["User", 0]] %>
      </li>
    </ol>

    <div class="actions">
      <%= f.submit "Create User" %>
    </div>

  </fieldset>

<% end %>
