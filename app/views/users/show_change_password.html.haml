#page-header.clearfix
  %h1= translate_helper("change_password_heading")
- if current_user.errors.any?
  #error_explanation
    %h2
      %h2= translate_helper("user_form_error_message", count: current_user.errors.count)
    %ul
      - current_user.errors.full_messages.each do |msg|
        %li= msg
= form_for current_user, :url => change_password_path do |f|
  %fieldset
    %ol.section.first
      %li.form-group
        .form-label
          = f.label :current_password, translate_helper("current_password")
        .form-field
          = f.password_field :current_password
      %li.form-group
        .form-label
          = f.label :password, translate_helper("password")
        .form-field
          = f.password_field :password
      %li.form-group
        .form-label
          = f.label :password_confirmation, translate_helper("password_confirmation")
        .form-field
          = f.password_field :password_confirmation
    .actions
      = f.submit translate_helper("change_password_submit")
