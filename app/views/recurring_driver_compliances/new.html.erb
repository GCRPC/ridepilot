<%= render 'shared/highlight_active_tab_js', is_primary_nav: true, tab_class: 'admin' %>

<div id="page-header" class="row">
  <div class="col-sm-12 col-md-6">
    <h1><%= translate_helper("new_recurring_driver_compliance_heading") %></h1>
  </div>
  <div class="col-sm-12 col-md-6">
    <% if can? :manage, @driver %>
      <div class="pull-right">
        <%= link_to translate_helper("cancel"), recurring_driver_compliances_path, class: "btn btn-default btn-sm" %>
        <button class="btn btn-default btn-sm" id="recurring_driver_compliance_form_submit">
          <%= translate_helper("recurring_driver_compliance_form_submit") %>
        </button>
      </div>
    <% end %>
  </div>
</div>

<%= render :partial=>"form" %>

<%= javascript_tag do %>
  $(document).ready(function(){
    $("form.new_recurring_driver_compliance .form-actions").hide();
    
    $("#recurring_driver_compliance_form_submit").on("click", function(){
      $("form.new_recurring_driver_compliance").submit();
    });
  });
<% end %>