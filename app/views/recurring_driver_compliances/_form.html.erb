<%= form_for @recurring_driver_compliance do |f| %>
  <% if @recurring_driver_compliance.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading"><%= translate_helper("recurring_driver_compliance_form_error", count: @recurring_driver_compliance.errors.count) %></div>
      <div class="panel-body">
        <ul>
          <% @recurring_driver_compliance.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <% if @readonly %>
    <div class="panel panel-warning">
      <div class="panel-body">
        <p><%= translate_helper("recurring_driver_compliance_form_readonly_notice") %></p>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading"><%= translate_helper("recurring_driver_compliance_form_details_header") %></div>
        <div class="panel-body form-horizontal">
          <div class="form-group">
            <%= f.label :event_name, translate_helper("recurring_driver_compliance_form_event_name"), class: "col-md-2 control-label" %>
            <div class="col-md-10">
              <%= f.text_field :event_name, class: "form-control" %>
            </div>
          </div>  
          <div class="form-group">
            <%= f.label :event_notes, translate_helper("recurring_driver_compliance_form_event_notes"), class: "col-md-2 control-label" %>
            <div class="col-md-10">
              <%= f.text_area :event_notes, class: "form-control", rows: 3 %>
            </div>
          </div>  
          <div class="form-group">
            <%= f.label :recurrence_notes, translate_helper("recurring_driver_compliance_form_recurrence_notes"), class: "col-md-2 control-label" %>
            <div class="col-md-10">
              <%= f.text_area :recurrence_notes, class: "form-control", rows: 3, disabled: @readonly %>
            </div>
          </div>  
        </div><!-- END .panel-body -->
      </div><!-- END .panel -->

      <div class="panel panel-default">
        <div class="panel-heading"><%= translate_helper("recurring_driver_compliance_form_recurrence_schedule_header") %></div>
        <div class="panel-body form-horizontal">
          <div class="form-group updates-schedule-preview">
            <%= f.label :recurrence_frequency, translate_helper("recurring_driver_compliance_form_recurrence_frequency"), class: "col-md-2 control-label" %>
            <div class="col-md-10">
              <%= f.number_field :recurrence_frequency, min: 1, class: "form-control", disabled: @readonly %>
            </div>
          </div>  
          <div class="form-group updates-schedule-preview">
            <%= f.label :recurrence_schedule, translate_helper("recurring_driver_compliance_form_recurrence_schedule"), class: "col-md-2 control-label" %>
            <div class="col-md-10">
              <%= f.select :recurrence_schedule, RecurringDriverCompliance::RECURRENCE_SCHEDULES.map(&:to_s), { selected: @recurring_driver_compliance.recurrence_schedule }, class: "form-control", disabled: @readonly %>
            </div>
          </div>  
          <div class="form-group updates-schedule-preview">
            <%= f.label :start_date, translate_helper("recurring_driver_compliance_form_start_date"), class: "col-md-2 control-label" %>
            <div class="col-md-10">
              <div class="input-group datepicker-icon">
                <%= f.text_field :start_date, class: "form-control datepicker", disabled: @readonly %>
                <div class="input-group-btn">
                  <button class="btn btn-default" type="button" <%= "disabled=\"disabled\"" if @readonly %>>
                    <%= image_tag "calendar-clock.png" %>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div><!-- END .panel-body -->
        <div class="panel-footer schedule-preview">
          <strong><%= translate_helper("recurring_driver_compliance_form_schedule_preview_header") %></strong>
          <ul></ul>
        </div><!-- END .panel-footer -->
        
      </div><!-- END .panel -->
    </div><!-- END .col-md-6 -->

    <div class="col-sm-12 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading"><%= translate_helper("recurring_driver_compliance_form_compliance_date_based_scheduling_heading") %></div>
        <div class="panel-body form-horizontal">
          <div class="checkbox updates-schedule-preview">
            <%= f.label :compliance_date_based_scheduling do %>
              <%= f.check_box :compliance_date_based_scheduling, disabled: @readonly %>
              <%= translate_helper("recurring_driver_compliance_form_compliance_date_based_scheduling") %>
            <% end %>
          </div>
        </div><!-- END .panel-body -->
      </div><!-- END .panel -->

      <div class="panel panel-default">
        <div class="panel-heading"><%= translate_helper("recurring_driver_compliance_recurrence_future_scheduling_heading") %></div>
        <div class="panel-body form-horizontal">
          <div class="form-group">
            <%= f.label :future_start_rule, translate_helper("recurring_driver_compliance_form_future_start_rule"), class: "col-md-2 control-label" %>
            <div class="col-md-10">
              <%= f.select :future_start_rule, RecurringDriverCompliance::FUTURE_START_RULES.map(&:to_s), { selected: @recurring_driver_compliance.future_start_rule }, class: "form-control", disabled: @readonly %>
            </div>
          </div>  
          <div class="form-group future_start_rule_time_span">
            <%= f.label :future_start_frequency, translate_helper("recurring_driver_compliance_form_future_start_frequency"), class: "col-md-2 control-label" %>
            <div class="col-md-10">
              <%= f.number_field :future_start_frequency, min: 1, class: "form-control", disabled: @readonly %>
            </div>
          </div>  
          <div class="form-group future_start_rule_time_span">
            <%= f.label :future_start_schedule, translate_helper("recurring_driver_compliance_form_future_start_schedule"), class: "col-md-2 control-label" %>
            <div class="col-md-10">
              <%= f.select :future_start_schedule, RecurringDriverCompliance::RECURRENCE_SCHEDULES.map(&:to_s), { selected: @recurring_driver_compliance.future_start_schedule }, class: "form-control", disabled: @readonly %>
            </div>
          </div>  
        </div><!-- END .panel-body -->
      </div><!-- END .panel -->
    </div><!-- END .col-md-6 -->
  </div><!-- END .row -->

  <div class="row form-actions"><%= f.submit translate_helper("recurring_driver_compliance_form_submit"), class: "btn action-button" %></div>
<% end %> 

<%= javascript_tag do %>
  $(document).ready(function(){
    $("#recurring_driver_compliance_future_start_rule").on("change", function() {
      if ($(this).val() == "time_span") {
        $(".future_start_rule_time_span").show();
      } else {
        $(".future_start_rule_time_span").hide();
      }
    }).trigger("change");
    
    $(".updates-schedule-preview").on("change", function() {
      var emptyInputs = $("#recurring_driver_compliance_recurrence_frequency, #recurring_driver_compliance_recurrence_schedule, #recurring_driver_compliance_start_date").filter(function() { return $(this).val() == ""; });
      var previewContainer = $(".schedule-preview");
      var preview = previewContainer.find("ul");
      if (emptyInputs.length == 0) {
        preview.fadeOut();
        var data = $("#recurring_driver_compliance_recurrence_frequency, #recurring_driver_compliance_recurrence_schedule, #recurring_driver_compliance_start_date, #recurring_driver_compliance_compliance_date_based_scheduling").serialize();
        $.getJSON("<%= preview_schedule_recurring_driver_compliances_path %>", data, function(data) {
          var text = "<li>" + data.join("</li><li>") + "</li>"
          preview.html(text).fadeIn();
          previewContainer.show();
        })
        .fail(function() {
          console.log("wut?", arguments);
          previewContainer.hide();
        })
      } else {
        previewContainer.hide();
      }
    }).trigger("change");
  });
<% end %>