%tr{:class => "vehicle_warranty-#{vehicle_warranty.id}"}
  %td
    %p.form-control-static
      = vehicle_warranty.expiration_date.to_s(:long)
  %td
    %p.form-control-static
      = link_to_unless @readonly, vehicle_warranty.description, polymorphic_path([vehicle_warranty.vehicle, vehicle_warranty], action: :edit), remote: true
  - unless @readonly
    %td
      = link_to polymorphic_path([vehicle_warranty.vehicle, vehicle_warranty]), 
          remote: true, 
          method: :delete, 
          data: { confirm: translate_helper("vehicle_warranty_delete_confirm") }, 
          class: "btn btn-danger btn-sm pull-right" do
        %i.fa.fa-remove{'aria-hidden' => true}
