<%= form_for @run do |f| %>

<%= f.label :date %><br/>
<%= f.text_field :date %><br/>
<br/>
<%= f.label :scheduled_start_time %><br/>
<%= f.text_field :scheduled_start_time %><br/>
<br/>
<%= f.label :scheduled_end_time %><br/>
<%= f.text_field :scheduled_end_time %><br/>
<br/>
<%= f.label :actual_start_time %><br/>
<%= f.text_field :actual_start_time %><br/>
<br/>
<%= f.label :actual_end_time %><br/>
<%= f.text_field :actual_end_time %><br/>
<br/>
<%= f.label :start_odometer %><br/>
<%= f.text_field :start_odometer %><br/>
<br/>
<%= f.label :end_odometer %><br/>
<%= f.text_field :end_odometer %><br/>
<br/>
<%= f.label :unpaid_driver_break_time %><br/>
<%= f.text_field :unpaid_driver_break_time %><br/>
<br/>
<%= f.label :vehicle %><br/>
<%= f.collection_select :vehicle_id, @vehicles, :id, :name %><br/>
<br/>
<%= f.label :driver %><br/>
<%= f.collection_select :driver_id, @drivers, :id, :name %><br/>
<br/>
<%= f.label :paid %><br/>
<%= f.select :paid, [["Yes", "true"], ["No", "false"]], {:selected => @run.paid.to_s } %><br/>
<br/>

<%= f.submit %>
<% end %>
