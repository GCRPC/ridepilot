<div id="page-header">
  <h1>Listing runs</h1>
</div>

<form action="<%= runs_path %>" method="get">
Date: <input type="text" name="date" value="<%= @date %>">
<input type="submit" name="submit" value="submit">
</form>
<br/>


Runs for <%= @date %>:
<% if @runs.size > 0 %>
<table>
  <tr>
    <th>Scheduled Start time</th>
    <th>Scheduled End time</th>
    <th>Vehicle</th>
    <th>Driver</th>
    <th>Complete</th>
<% if can? :edit, Run %><th></th><% end %>
    <th></th>
    <th></th>
  </tr>

<% @runs.each do |run| %>
  <tr>
    <td><%= run.scheduled_start_time.to_s %></td>
    <td><%= run.scheduled_end_time.to_s %></td>
    <td><%= run.vehicle ? run.vehicle.name : 'no vehicle' %></td>
    <td><%= run.driver  ? run.driver.name : 'no driver' %></td>
    <td><%= run.complete ? 'Complete' : 'Incomplete' %></td>
    <td><%= link_to 'Show', run %></td>
    <td><% if can? :edit, run %><%= link_to 'Edit', edit_run_path(run) %><% end %></td>
    <td><%= link_to 'Destroy', run, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<% else %>
no runs
<% end %>
<br />

