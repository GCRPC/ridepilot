<div id="page-header">
  <h1>Editing Run: <%= @run.date.to_s(:long) %></h1>
</div>

<%= form_for @run do |f| %>
  <%= render "form", :f => f %>
  
  <fieldset>
    <table>
      <tr>
        <th>Pickup Time</th>
        <th>Customer Name</th>
        <th>In Distict?</th>
        <th>Purpose</th>
        <th>Round Trip?</th>
        <th>Guest Count</th>
        <th>Attendant Count</th>
        <th>Result</th>
        <th></th>
      </tr>
      <% @run.trips.each do |trip| %>
        <% f.fields_for :trips, trip do |trip_fields| %>
          <%= render :partial => 'trips/trip_form', :locals => {:trip_fields => trip_fields, :trip => trip, :show_edit_run_link => false} %>
        <% end %>
      <% end %>
    </table>
    <hr />
    <%= link_to 'New Trip', new_trip_path(:start => @run.date.to_time.to_i, :run_id => @run.id), :class=>'action-bttn new', 'data-start' => @run.date.to_time.to_i, 'data-run-id' => @run.id %>
    <div class="new_trip"></div>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
