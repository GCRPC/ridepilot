<div id="page-header">
  <h1>Editing run</h1>
</div>

<%= form_for @run do |f| %>
  <%= render "form", :f => f %>
  <fieldset>
    <table>
      <tr>
        <th>Pickup Time</th>
        <th>Customer Name</th>
        <th>Round Trip?</th>
        <th>Guest Count</th>
        <th>Attendant Count</th>
        <th>Result</th>
        <th></th>
      </tr>
      <% @run.trips.each do |trip| %>
        <% f.fields_for :trips, trip do |trip_fields| %>
          <tr>
            <td>
              <%= trip.pickup_time.strftime("%l:%M %p") %>
            </td>
            <td>
              <%= trip.customer.name %>
            </td>
            <td>
              <%= trip_fields.check_box :round_trip %>
            </td>
            <td>
              <%= trip_fields.text_field :guest_count, :size => 1 %>
            </td>
            <td>
              <%= trip_fields.text_field :attendant_count, :size => 1 %>
            </td>
            <td>
              <%= trip_fields.select :trip_result, @trip_results, :include_blank => true %>
            </td>
            <td>
              <%= link_to "Edit Trip", trip, :class => "edit" %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= render 'shared/date_picker_javascript' %>
