.panel.panel-primary#run_date_time_panel
  .panel-heading
    %h3.panel-title
      = translate_helper(:date_and_time)
  .panel-body{style: 'padding: 5px;'}
    .form-group.col-sm-12
      .col-sm-3
        = f.label :date, translate_helper("date") 
      .col-sm-9
        = f.text_field :date, :size => 10, :class => "datepicker", class: 'form-control'
    .form-group.col-sm-12
      .col-sm-3
        = f.label :scheduled_start_time, translate_helper("scheduled_start_time")
      .col-sm-9
        = f.text_field :scheduled_start_time, :size => 8, :value => @run.scheduled_start_time.try(:to_s, :time_only), "data-behavior" => "time-picker", class: 'form-control'
    .form-group.col-sm-12
      .col-sm-3
        = f.label :scheduled_end_time, translate_helper("scheduled_end_time")
      .col-sm-9
        = f.text_field :scheduled_end_time, :size => 8, :value => @run.scheduled_end_time.try(:to_s, :time_only), "data-behavior" => "time-picker", class: 'form-control'
    .form-group.col-sm-12
      .col-sm-3
        = f.label :actual_start_time, translate_helper("actual_start_time")
      .col-sm-9
        = f.text_field :actual_start_time, :size => 8, :value => @run.actual_start_time.try(:to_s, :time_only), "data-behavior" => "time-picker", class: 'form-control'
    .form-group.col-sm-12
      .col-sm-3
        = f.label :actual_end_time, translate_helper("actual_end_time")
      .col-sm-9
        = f.text_field :actual_end_time, :size => 8, :value => @run.actual_end_time.try(:to_s, :time_only), "data-behavior" => "time-picker", class: 'form-control'