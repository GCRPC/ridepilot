%tr{class:"vehicle_capacity-#{vehicle_capacity.id}"}
  %td= vehicle_capacity.capacity_type.try(:name)
  %td= vehicle_capacity.capacity
  %td
    .pull-right
      = link_to translate_helper(:edit), polymorphic_path([vehicle_capacity.vehicle_type, vehicle_capacity], action: :edit), remote: true, class: "btn btn-primary btn-sm" if can?(:edit, vehicle_capacity)
      -if can?(:delete, vehicle_capacity)
        = link_to polymorphic_path([vehicle_capacity.vehicle_type, vehicle_capacity]), 
            method: :delete, 
            remote: true, 
            data: { confirm: translate_helper("vehicle_capacity_delete_confirm") }, 
            class: "btn btn-danger btn-sm" do
          %i.fa.fa-remove{'aria-hidden' => true}
