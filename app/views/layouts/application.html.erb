<!DOCTYPE html>
<html>
<head>
  <title>Ridepilot</title>
  <%= stylesheet_link_tag "style.css" %>
  <%= stylesheet_link_tag "jquery-ui-1.8.9.custom.css" %>
  <%= stylesheet_link_tag "jquery.weekcalendar.css" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "autocomplete-rails.js" %>
  <%= javascript_include_tag "jquery.weekcalendar.js" %>

  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <div class="wrap selfclear">
      <a id="logo" href="/">Ride Pilot</a>
      <div id="login-area">
        <% if current_user %>
          <a href="#"><%= current_user.email %></a> | <%= link_to "Log out", destroy_user_session_path %>
  
          Logged in to 
          <% if @provider_map.size > 1 %>
          <%= form_tag change_provider_path %>
            <select name="provider_id" onchange="form.submit();">
              <%= options_for_select(@provider_map, selected = current_user.current_provider_id) %>
            </select>
            <%= hidden_field_tag "come_from", request.fullpath %>
          </form>
          <% else %>
            <%= current_user.current_provider.name %>
          <% end %>

        <% end %>
      </div>
    </div><!-- /.wrap -->
  </div><!-- /#header -->
  <div id="crossbar">
    <div class="wrap selfclear">
      <ul id="primary-nav" class="selfclear">
        <li><%= link_to_with_highlight "Trips", trips_path %></li>
        <li><%= link_to_with_highlight "Runs", runs_path %></li>
        <li><%= link_to_with_highlight "Customers", customers_path %></li><!-- TODO: fix the link_to_with_highlight helper so that subpages get the active class -->
        <li><%= link_to_with_highlight "Repeating trips", repeating_trips_path %></li>
        <li><%= link_to_with_highlight "Reports", reports_path %></li>
      </ul>

      <ul id="secondary-nav" class="selfclear">
        <% if can? :edit, "Providers" %>
        <li><%= link_to_with_highlight "Providers", providers_path %></li>
        <% end %>
        <% if can? :edit, FundingSource %>
        <li><%= link_to_with_highlight "Funding Sources", funding_sources_path %></li>
        <% end %>
        <li><%= link_to_with_highlight "Vehicles, Drivers & Users", provider_path(current_user.current_provider) %></li>
      </ul>
    </div><!-- /.wrap -->
  </div><!-- /#crossbar -->

  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>

  <div id="main">

    <%= content_for?(:menu_bar) ? yield(:menu_bar) : '' %>

<%= yield %>

  </div>

</body>
</html>
