.panel.panel-default
  .panel-heading
    .row
      .col-sm-12
        %h3.panel-title
          .btns.pull-right
            =link_to translate_helper("create_provider_address_text"), '#', id: 'addProviderCommonAddress', class:'btn action-button'
          = translate_helper(:show_provider_address_heading)
  .panel-body
    .row
      .col-sm-12
        = form_tag search_provider_common_addresses_path, :method => :get, :remote => true, :id => "search_addresses", :class => 'form-inline' do 
          = hidden_field_tag :provider_id, @provider.id 
          .form-group
            = text_field_tag :name, nil, class: 'form-control'
            = submit_tag translate_helper("search"), class: 'btn action-button'

      .col-sm-12{style: 'padding-top: 15px;'}
        = render 'addresses_table'
    

= render 'new_address_dialog'
= render 'addresses/upload_form', provider: @provider 